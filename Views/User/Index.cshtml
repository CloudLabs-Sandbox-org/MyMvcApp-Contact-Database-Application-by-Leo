@model IEnumerable<MyMvcApp.Models.User>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create", "User")
</p>

<!-- Formulario de bÃºsqueda -->
<form method="get" action="@Url.Action("Index", "User")">
    <div class="form-group">
        <label for="searchName">Buscar por nombre:</label>
        <input type="text" name="searchName" id="searchName" class="form-control" placeholder="Ingrese un nombre" />
        <button type="submit" class="btn btn-primary mt-2">Buscar</button>
    </div>
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>